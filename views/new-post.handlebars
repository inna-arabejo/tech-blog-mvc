<div class="card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
    <form class="card-body" id="new-post-form">
      <label class="form-label" for="post-title">Title</label>
      <input type="text" name="post-title" class="form-input" />

      <label class="form-label" for="post-body">Content</label>
      <textarea id="post-body" class="form-input"></textarea>

      <button type="submit" class="btn">Create Post</button>
      
      <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>

<script src="/js/new-post.js"></script>